@model NiceAdminTheme.Models.ProductModel;

<main id="main" class="main">
<h3>@(Model.ProductID == null ? "Add" : "Update") Product</h3>
<form asp-action="ProductSave" method="post" class="row g-3">
    <div class="col-md-12">
        <div class="form-floating">
            <input asp-for="ProductID" type="hidden" class="form-control">
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-floating">
                <input type="text" asp-for="ProductName" class="form-control" id="floatingName" placeholder="ProductName">
            <label for="floatingName" >Product Name</label>
            <span class="text-danger" asp-validation-for="ProductName"></span>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-floating">
                <input type="number" asp-for="ProductPrice" class="form-control" id="floatingProductPrice" placeholder="ProductPrice" min="" step="0.1">
                <label for="floatingProductPrice">Product Price</label>
                <span class="text-danger" asp-validation-for="ProductPrice"></span>
        </div>
    </div>
    <div class="col-12">
        <div class="form-floating">
                <input type="text" asp-for="ProductCode" class="form-control" id="floatinCode" placeholder="ProductCode">
                <label for="floatinCode" >Product Code</label>
                <span class="text-danger" asp-validation-for="ProductCode"></span>
        </div>
    </div>
    <div class="col-12">
        <div class="form-floating">
                <input type="text" asp-for="Description" class="form-control" id="floatingDesc" placeholder="Description">
            <label for="floatingDesc">Description</label>
                <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
        <div class="col-md-4">
            <div class="form-floating">
                @if(ViewBag.UserDropDownList != null){
                <select class="form-control mb-3" asp-for="UserID">
                    <option value="">Select User</option>
                    @foreach (var user in ViewBag.UserDropDownList)
                    {
                        <option value="@user.UserID">@user.UserName</option>
                    }
                </select>
              }
            </div>                
        </div>
    <div class="text-center">
            <button type="submit" class="btn btn-primary" >Submit</button>
        <button class="btn btn-danger">
            <a asp-action="ProductList" asp-controller="Product" class="nav-link">
                Back
            </a>
        </button>
    </div>
</form>
</main>