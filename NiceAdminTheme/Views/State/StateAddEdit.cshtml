@model NiceAdminTheme.Models.StateModal

<main id="main" class="main">
    <h3>@(Model.StateID == null ? "Add" : "Update") State</h3>
    <form asp-action="StateSave" method="post" class="row g-3">
        <!-- Hidden Field for StateID -->
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="StateID" type="hidden" class="form-control">
            </div>
        </div>

        <!-- State Name Field -->
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="StateName" type="text" class="form-control" id="floatingStateName" placeholder="State Name">
                <label for="floatingStateName">State Name</label>
                <span class="text-danger" asp-validation-for="StateName"></span>
            </div>
        </div>

        <!-- State Code Field -->
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="StateCode" type="text" class="form-control" id="floatingStateCode" placeholder="State Code">
                <label for="floatingStateCode">State Code</label>
                <span class="text-danger" asp-validation-for="StateCode"></span>
            </div>
        </div>

        <!-- Country Dropdown -->
        <div class="col-md-12">
            <div class="form-floating">
                <select asp-for="CountryID" class="form-control" id="floatingCountryDropdown">
                    <option value="" selected="">-- Select Country --</option>
                    @if (ViewBag.CountryList != null)
                    {
                        foreach (var country in ViewBag.CountryList)
                        {
                            <option value="@country.CountryID">@country.CountryName</option>
                        }
                    }
                </select>
                <label for="floatingCountryDropdown">Associated Country</label>
                <span class="text-danger" asp-validation-for="CountryID"></span>
            </div>
        </div>

        <!-- User Dropdown -->
        <div class="col-md-12">
            <div class="form-floating">
                <select asp-for="UserID" class="form-control" id="floatingUserDropdown">
                    <option value="" selected="">-- Select User --</option>
                    @if (ViewBag.UserList != null)
                    {
                        foreach (var user in ViewBag.UserList)
                        {
                            <option value="@user.UserID">@user.UserName</option>
                        }
                    }
                </select>
                <label for="floatingUserDropdown">Associated User</label>
                <span class="text-danger" asp-validation-for="UserID"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button class="btn btn-danger">
                <a asp-action="StateList" asp-controller="State" class="nav-link">
                    Back
                </a>
            </button>
        </div>
    </form>
</main>
