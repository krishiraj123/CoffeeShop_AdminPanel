@model NiceAdminTheme.Models.CityModel

<main id="main" class="main">
    <h3>@(Model.CityID == null ? "Add" : "Update") City</h3>
    <form asp-action="CitySave" method="post" class="row g-3">
        <!-- Hidden Field for CityID -->
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="CityID" type="hidden" class="form-control">
            </div>
        </div>

        <!-- City Name Field -->
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="CityName" type="text" class="form-control" id="floatingCityName" placeholder="City Name">
                <label for="floatingCityName">City Name</label>
                <span class="text-danger" asp-validation-for="CityName"></span>
            </div>
        </div>

        <!-- Pincode Field -->
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="Pincode" type="text" class="form-control" id="floatingPincode" placeholder="Pincode">
                <label for="floatingPincode">Pincode</label>
                <span class="text-danger" asp-validation-for="Pincode"></span>
            </div>
        </div>

        <!-- State Dropdown -->
        <div class="col-md-12">
            <div class="form-floating">
                <select asp-for="StateID" class="form-control" id="floatingStateDropdown">
                    <option value="" selected="">-- Select State --</option>
                    @if (ViewBag.StateList != null)
                    {
                        foreach (var state in ViewBag.StateList)
                        {
                            <option value="@state.StateID">@state.StateName</option>
                        }
                    }
                </select>
                <label for="floatingStateDropdown">Associated State</label>
                <span class="text-danger" asp-validation-for="StateID"></span>
            </div>
        </div>

        <!-- User Dropdown -->
        <div class="col-md-12">
            <div class="form-floating">
                <select asp-for="UserID" class="form-control" id="floatingUserDropdown">
                    <option value="" selected="">-- Select User --</option>
                    @if (ViewBag.UserList != null)
                    {
                        foreach (var user in ViewBag.UserList)
                        {
                            <option value="@user.UserID">@user.UserName</option>
                        }
                    }
                </select>
                <label for="floatingUserDropdown">Associated User</label>
                <span class="text-danger" asp-validation-for="UserID"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button class="btn btn-danger">
                <a asp-action="CityList" asp-controller="City" class="nav-link">
                    Back
                </a>
            </button>
        </div>
    </form>
</main>
