@model NiceAdminTheme.Models.OrderDetailModel
<main id="main" class="main">
    <h3>@(Model.OrderDetailID == null ? "Add" : "Update") Order Details</h3>
    <form asp-action="OrderSave" method="post" class="row g-3">
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="OrderDetailID" type="hidden" class="form-control">
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-floating mb-3">
                @if (ViewBag.OrderList != null)
                {
                    <select class="form-control" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID", "OrderID"))">
                        <option value="">Select OrderID</option>
                    </select>
                    <label for="floatingOrderID" asp-for="OrderID">Select OrderID</label>
                }
                <span class="text-danger" asp-validation-for="OrderID"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-floating mb-3">
                @if (ViewBag.ProductList != null)
                {
                    <select class="form-control" asp-for="ProductID" asp-items="@(new SelectList(ViewBag.ProductList, "ProductID", "ProductName"))">
                        <option value="">Select ProductName</option>
                    </select>
                    <label for="floatingUserID" asp-for="ProductID">Select Product</label>
                }
                <span class="text-danger" asp-validation-for="ProductID"></span>
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="Quantity" type="number" class="form-control" id="floatingQuantity" placeholder="Quantity" step="1">
                <label for="floatingQuantity" asp-for="Quantity">Quantity</label>
                <span class="text-danger" asp-validation-for="Quantity"></span>
            </div>
        </div>

        <div class="col-12">
            <div class="form-floating">
                <input asp-for="Amount" type="number" class="form-control" id="floatingAmount" placeholder="Amount" step="0.01">
                <label for="floatingAmount" asp-for="Amount">Amount</label>
                <span class="text-danger" asp-validation-for="Amount"></span>
            </div>
        </div>

        <div class="col-12">
            <div class="form-floating">
                <input asp-for="TotalAmount" type="number" class="form-control" id="floatingTotalAmount" placeholder="Total Amount" step="0.01">
                <label for="floatingTotalAmount" asp-for="TotalAmount">Total Amount</label>
                <span class="text-danger" asp-validation-for="TotalAmount"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                @if (ViewBag.UserList != null)
                {
                    <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                        <option value="">Select User</option>
                    </select>
                    <label for="floatingUserID" asp-for="UserID">Select User</label>
                }
                <span class="text-danger" asp-validation-for="UserID"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="button" class="btn btn-danger">
                <a asp-action="ListOrderDetail" asp-controller="OrderDetail" style="color: white; text-decoration: none;">
                    Back
                </a>
            </button>
        </div>
    </form>
</main>

