@model NiceAdminTheme.Models.CountryModel

<main id="main" class="main">
    <h3>@(Model.CountryID == null ? "Add" : "Update") Country</h3>
    <form asp-action="CountrySave" method="post" class="row g-3">
        <!-- Hidden Field for CountryID -->
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="CountryID" type="hidden" class="form-control">
            </div>
        </div>

        <!-- Country Name Field -->
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="CountryName" type="text" class="form-control" id="floatingCountryName" placeholder="Country Name">
                <label for="floatingCountryName">Country Name</label>
                <span class="text-danger" asp-validation-for="CountryName"></span>
            </div>
        </div>

        <!-- User Dropdown -->
        <div class="col-md-12">
            <div class="form-floating">
                <select asp-for="UserID" class="form-control" id="floatingUserDropdown">
                    <option value="" selected="">-- Select User --</option>
                    @if (ViewBag.UserList != null)
                    {
                        foreach (var user in ViewBag.UserList)
                        {
                            <option value="@user.UserID">@user.UserName</option>
                        }
                    }
                </select>
                <label for="floatingUserDropdown">Associated User</label>
                <span class="text-danger" asp-validation-for="UserID"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button class="btn btn-danger">
                <a asp-action="CountryList" asp-controller="Country" class="nav-link">
                    Back
                </a>
            </button>
        </div>
    </form>
</main>